pipeline {
    agent any

    tools {
        nodejs 'Node 20.12.2'
    }

    stages{
        stage('Build stage') {
            steps {
                dir('front') {
                    script {
                        sh 'node --version'
                        echo 'Npm build...'
                        sh 'npm i'
                        sh 'npm run build'
                    }
                }
            }
            post {
                success {
                    echo 'Build success'
                    updateGitlabCommitStatus name: 'build', state: 'success'
                }
                failure {
                    echo 'Build failed'
                    updateGitlabCommitStatus name: 'build', state: 'failed'
                }
            }
        }
    }
}
