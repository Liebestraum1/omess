pipeline {
    agent any

    stages{
        stage('Build stage') {
            steps {
                dir('front') {
                    script {
                        echo 'Npm build...'
                        try {
                            docker.image('node:20.12.2').inside {
                                sh 'npm install'
                                sh 'npm run build'
                            }
                        } catch(Exception e) {
                            echo "${e.getMessage()}"
                            currentBuild.result = 'FAILURE'
                            error('Build fail')
                        }
                    }
                }
            }
            post {
                success {
                    echo 'Build success'
                    updateGitlabCommitStatus name: 'build', state: 'success'
                }
                failure {
                    echo 'Build failed'
                    updateGitlabCommitStatus name: 'build', state: 'failed'
                }
            }
        }
    }
}
