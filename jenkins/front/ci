pipeline {
    agent any

    stages{
        stage('Build stage') {
            steps {
                dir('front') {
                    echo 'Docker build...'
                    sh 'docker build -f ../docker/front-docker -t frontend .'
                }
            }
            post {
                always {
                    sh 'docker image prune -f'
                }
                success {
                    echo 'Build success'
                    updateGitlabCommitStatus name: 'build', state: 'success'
                }
                failure {
                    echo 'Build failed'
                    updateGitlabCommitStatus name: 'build', state: 'failed'
                }
            }
        }
    }
}
