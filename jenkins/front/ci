pipeline {
    agent any
    node {
        env.NODEJS_HOME = "${tool 'Node 20.12.2'}"
        env.PATH="${env.NODEJS_HOME}/bin:${env.PATH}"
    }

    stages{
        stage('Build stage') {
            steps {
                dir('front') {
                    script {
                        echo 'Npm build...'
                        sh 'npm i'
                        sh 'npm run build'
                    }
                }
            }
            post {
                success {
                    echo 'Build success'
                    updateGitlabCommitStatus name: 'build', state: 'success'
                }
                failure {
                    echo 'Build failed'
                    updateGitlabCommitStatus name: 'build', state: 'failed'
                }
            }
        }
    }
}
